{
	"env": {
		"es6": true,
		"node": true
	},
	"extends": ["@codeyourfuture/standard"],
	"ignorePatterns": ["*.d.ts"],
	"overrides": [
		{
			"files": ["bin/*.js", "cypress.config.js"],
			"rules": {
				"no-console": "off"
			}
		}
	],
	"parserOptions": {
		"ecmaVersion": 2022
	},
	"plugins": ["import"],
	"root": true,
	"rules": {
		"import/order": [
			"error",
			{
				"alphabetize": { "caseInsensitive": true, "order": "asc" },
				"newlines-between": "always"
			}
		],
		"comma-dangle": "off",
		"no-console": "error",
		"no-warning-comments": "warn",
		"object-shorthand": "error",
		"operator-linebreak": "off"
	}
}
